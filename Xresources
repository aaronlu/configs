xterm*faceName: xft:monospace:size=16
xterm*background: black
xterm*foreground: white

Xft.antialias: true
Xft.hinting:   true
Xft.rgba:      rgb
Xft.hintstyle: hintslight
Xft.dpi:       130

Rxvt*font: xft:ubuntu mono:size=15:antialias=true
Rxvt*background: 0
Rxvt*foreground: 15
! make blue light(easier to be seen)
Rxvt.color12: rgb:5c/5c/ff
! do not like the scrollbar
Rxvt.scrollBar: 0

! perl extension: click to open the web page
Rxvt.perl-ext-common: default,matcher
Rxvt.url-launcher: /usr/bin/xdg-open
Rxvt.matcher.button: 1

! with tmux, rxvt's tab isn't of much use
!Rxvt.perl-ext-common: default,matcher,tabbed
